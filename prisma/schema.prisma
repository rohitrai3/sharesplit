generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Member {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  groups    Group[]
  expenses  Expense[]
  createdAt DateTime  @default(now())
  pays      Pay[]
  oweFrom   Owe[]     @relation("OweFrom")
  oweTo     Owe[]     @relation("OweTo")
}

model Group {
  id        Int       @id @default(autoincrement())
  name      String
  members   Member[]
  expenses  Expense[]
  createdAt DateTime  @default(now())
}

model Expense {
  id        Int      @id @default(autoincrement())
  name      String
  amount    Float
  member    Member   @relation(fields: [memberId], references: [id])
  group     Group    @relation(fields: [groupId], references: [id])
  groupId   Int
  createdAt DateTime @default(now())
  pays      Pay[]
  memberId  Int
}

model Pay {
  id        Int      @id @default(autoincrement())
  amount    Float
  payor     Member   @relation(fields: [memberId], references: [id])
  expense   Expense  @relation(fields: [expenseId], references: [id])
  createdAt DateTime @default(now())
  expenseId Int
  memberId  Int
}

model Owe {
  id           Int      @id @default(autoincrement())
  amount       Float
  from         Member   @relation("OweTo", fields: [fromMemberId], references: [id])
  to           Member   @relation("OweFrom", fields: [toMemberId], references: [id])
  createdAt    DateTime @default(now())
  fromMemberId Int
  toMemberId   Int
}
